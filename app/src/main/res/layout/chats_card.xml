<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#D4D1D1"
        android:id="@+id/lrBackChats"
        tools:ignore="PrivateResource">

        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="70dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@color/cardview_dark_background"
                android:id="@+id/chats_photo"
                tools:ignore="ContentDescription,PrivateResource" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="9"
                    android:text="@string/chat_name"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:id="@+id/user_name"

                    tools:ignore="NestedWeights,RtlCompat" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:id="@+id/new_message"
                    android:layout_weight="1"
                    android:background="#00FF0A"
                    android:contentDescription="new_message"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Last_message"
                    android:id="@+id/user_last_message"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="HardcodedText,NestedWeights,RtlCompat,RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="time"
                    android:id="@+id/time_of_message"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>