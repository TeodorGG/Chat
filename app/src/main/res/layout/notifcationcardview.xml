<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D4D1D1"
        android:id="@+id/lrback"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="70dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@color/cardview_dark_background"
                android:id="@+id/not_image"
                android:layout_gravity="center"
                tools:ignore="ContentDescription,PrivateResource" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="9"
                    android:id="@+id/text_notification"
                    android:text="message_notiication"
                    android:textColor="#000"
                    android:textSize="18sp"

                    tools:ignore="NestedWeights,RtlCompat" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:text="time"
                    android:layout_gravity="end"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/time_notification"
                    tools:ignore="HardcodedText,RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:id="@+id/not_cancel"
                        android:layout_marginStart="150dp"
                        android:textSize="20sp"
                        android:textColor="#FF0000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="25dp"
                        android:id="@+id/not_ok"
                        android:text="ok"
                        android:textColor="#00FF0A"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>